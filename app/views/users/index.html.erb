<h1>All Players</h1>

<table class="bordered highlight">
  <thead>
    <th>Username</th>
    <th>Favorite Fortune</th>
    <th>Most Recent Cookies Eaten</th>
    <th>Total Cookies Eaten</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user_path(user)%></b></td>
      <td><%= user.favorite_fortune %></td>
      <td><%= user.current_score %></td>
      <td><%= user.cumulative_score %></td>
    </tr>
    <% end %>
  </tbody>
</table>
